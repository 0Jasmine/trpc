{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "importHelpers": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@trpc/server": ["packages/server/src"],
      "@trpc/react": ["packages/react/src"],
      "@trpc/client": ["packages/client/src"],
      "$test/*": ["test/*"]
    }
  }
}
