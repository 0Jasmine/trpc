datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator kysely {
  provider = "npx prisma-generator-kysely"
  output   = "./types"
}

model Product {
  id           String    @id @default(cuid())
  stock        Int
  rating       Int
  name         String
  description  String
  price        Int
  isBestSeller Boolean
  leadTime     Int
  image        String
  discount     Discount? @relation(fields: [discountId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  discountId   String?
  review       Review[]

  @@index([discountId])
}

model Discount {
  id        String    @id @default(cuid())
  percent   Int
  expiresAt Int
  Product   Product[]
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@index([productId])
  @@index([userId])
}

model User {
  id      String   @id @default(cuid())
  name    String?
  email   String
  image   String?
  reviews Review[]
}
